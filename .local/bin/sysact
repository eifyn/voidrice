#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ”’ lock\nğŸ’« leave dwm\nğŸŒ´ renew dwm\nğŸ» hibernate\nğŸ’¤ sleep\nğŸŒŠ reboot\nğŸ‘½ shutdown\nğŸ“º display off" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	'ğŸ’« leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸŒ´ renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ» hibernate') slock $ctl hibernate ;;
	'ğŸ’¤ sleep') slock $ctl suspend ;;
	'ğŸŒŠ reboot') $ctl reboot ;;
	'ğŸ‘½ shutdown') $ctl poweroff ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
